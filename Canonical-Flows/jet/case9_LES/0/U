FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 1);

boundaryField
{
    inlet1
    {
        type            turbulentInlet;
        referenceField  uniform (0 0 15);
        fluctuationScale (0.02 0.01 0.01);
        value           uniform (0 0 15);
    }
	
	inlet2
    {
        type            turbulentInlet;
        referenceField  uniform (0 0 1);
        fluctuationScale (0.02 0.01 0.01);
        value           uniform (0 0 1);
    }

    outlet
    {
        type            inletOutlet;
        inletValue      uniform (0 0 0);
        value           uniform (0 0 0);
    }

    wall
    {
        type            noSlip;
    }
}

