FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(p|pcorr)"
    {
        solver          GAMG;
        smoother        DICGaussSeidel;
        tolerance       1e-06;
        relTol          0.1;
    }
    "(p|pcorr)Final"
    {
        $p;
        tolerance       1e-06;
        relTol          0;
    }
    "(U|k|omega|s)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-06;
        relTol          0.1;
    }
    "(U|k|omega|s)Final"
    {
        $U;
        tolerance       1e-06;
        relTol          0;
    }
}


PIMPLE
{
    momentumPredictor   yes;
    nOuterCorrectors    2;
    nCorrectors     2;
    nNonOrthogonalCorrectors 0;
}

