FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh   dynamicRefineFvMesh;


dynamicRefineFvMeshCoeffs
{
    refineInterval  1;

    field           s;

    lowerRefineLevel 0.3;
    upperRefineLevel 0.7;

    unrefineLevel   10;

    nBufferLayers   2;

    maxRefinement   2;

    maxCells        5000000;

    correctFluxes
    (
        (phi none)
        (nHatf none)
        (rhoPhi none)
        (ghf none)
    );

    dumpLevel       true;
}


